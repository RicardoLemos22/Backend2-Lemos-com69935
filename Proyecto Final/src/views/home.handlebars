<main class="container bienvenidos-container">
    <div class="container">
        <h2 class="main-title">"Cat√°logo completo de Productos"</h2>
        
        <div class="row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card producto-card">
                    <img src={{this.thumbnail}} class="card-img-top" alt={{this.title}} />
                    <div class="card-body">
                    <h5 class="card-title font-weight-bold">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div class="d-flex justify-content-between">
                        <span class="card-price font-weight-bold">$ {{this.price}}</span>
                    </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        
    </div>
</main>